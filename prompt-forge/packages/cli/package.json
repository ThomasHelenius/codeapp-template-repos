{
  "name": "prompt-forge",
  "version": "0.1.0",
  "description": "CLI for versioning, testing, and managing LLM prompts",
  "type": "module",
  "bin": {
    "forge": "./bin/forge.js",
    "prompt-forge": "./bin/forge.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --dts --clean",
    "dev": "tsx src/cli.ts",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@prompt-forge/core": "workspace:*",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "boxen": "^7.1.1",
    "table": "^6.8.1"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  },
  "keywords": [
    "llm",
    "prompts",
    "ai",
    "cli",
    "testing",
    "versioning",
    "openai",
    "anthropic"
  ],
  "license": "MIT"
}
