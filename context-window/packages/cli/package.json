{
  "name": "context-window",
  "version": "0.1.0",
  "description": "CLI for intelligent code compression for LLM context windows",
  "type": "module",
  "bin": {
    "cw": "./bin/cw.js",
    "context-window": "./bin/cw.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --dts --clean",
    "dev": "tsx src/cli.ts",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@context-window/core": "workspace:*",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "boxen": "^7.1.1",
    "table": "^6.8.1",
    "clipboardy": "^4.0.0"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  },
  "keywords": [
    "llm",
    "context",
    "compression",
    "ai",
    "cli",
    "tokens",
    "gpt",
    "claude"
  ],
  "license": "MIT"
}
