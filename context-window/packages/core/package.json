{
  "name": "@context-window/core",
  "version": "0.1.0",
  "description": "Core library for context-window code compression",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "ignore": "^5.3.0",
    "tiktoken": "^1.0.12",
    "globby": "^14.0.0",
    "picomatch": "^3.0.1"
  },
  "devDependencies": {
    "@types/picomatch": "^2.3.3",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  },
  "keywords": [
    "llm",
    "context",
    "compression",
    "ai",
    "tokens",
    "code"
  ],
  "license": "MIT"
}
